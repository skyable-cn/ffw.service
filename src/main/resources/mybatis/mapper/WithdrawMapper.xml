<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="WithdrawMapper">
    <!--表名 -->
    <sql id="tableName">
		withdraw
	</sql>

    <!-- 字段 -->
    <sql id="Field">
		WITHDRAW_ID,
		MEMBER_ID,
		MONEY,
		CDT,
		STATE
	</sql>

    <!-- 字段值 -->
    <sql id="FieldValue">
		#{WITHDRAW_ID},
		#{MEMBER_ID},
		#{MONEY},
		#{CDT},
		#{STATE}
	</sql>

   <select id="listPage" parameterType="page" resultType="pd">
        select
	        wd.WITHDRAW_ID,
			wd.MEMBER_ID,
			wd.MONEY,
			wd.CDT,
			wd.STATE,
			m.USERNAME,
			m.NICKNAME,
			m.FULLNAME,
			m.PHONE,
			m.SEX,
			m.PHOTO,
			m.WAITACCOUNT,
			m.ALREADYACCOUNT,
			m.WXOPEN_ID,
			m.FROMWXOPEN_ID,
			m.MEMBERTYPE_ID
        from
        <include refid="tableName"></include> wd
        left join member m on wd.member_id = m.member_id
        where
        1 = 1
        <if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
            and
            (
            	wd.CDT LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
            )
        </if>
        <if test="pd.STATE!= null and pd.STATE != ''"><!-- 关键词检索 -->
            and wd.STATE = #{pd.STATE}
        </if>
        order by wd.WITHDRAW_ID DESC
    </select>

    <select id="listAll" parameterType="pd" resultType="pd">
        select
        	wd.WITHDRAW_ID,
			wd.MEMBER_ID,
			wd.MONEY,
			wd.CDT,
			wd.STATE,
			m.USERNAME,
			m.NICKNAME,
			m.FULLNAME,
			m.PHONE,
			m.SEX,
			m.PHOTO,
			m.WAITACCOUNT,
			m.ALREADYACCOUNT,
			m.WXOPEN_ID,
			m.FROMWXOPEN_ID,
			m.MEMBERTYPE_ID
        from
        <include refid="tableName"></include> wd
        left join member m on wd.member_id = m.member_id
         where
        1 = 1
        <if test="keywords!= null and keywords != ''"><!-- 关键词检索 -->
            and
            (
            	wd.CDT LIKE CONCAT(CONCAT('%', #{keywords}),'%')
            )
        </if>
        <if test="STATE!= null and STATE != ''"><!-- 关键词检索 -->
            and wd.STATE = #{STATE}
        </if>
        order by wd.WITHDRAW_ID DESC
    </select>

    <!-- 新增 -->
    <insert id="save" parameterType="pd" useGeneratedKeys="true" keyProperty="WITHDRAW_ID">
        insert into <include refid="tableName"></include> (
        <include refid="Field"></include>
        ) values (
        <include refid="FieldValue"></include>
        )
    </insert>
    
        <!-- 修改 -->
    <update id="edit" parameterType="pd">
        update
        <include refid="tableName"></include>
        set
        WITHDRAW_ID = #{WITHDRAW_ID}
        <if test="STATE != null and STATE != ''">
            ,STATE = #{STATE}
        </if>
        
        where
        WITHDRAW_ID = #{WITHDRAW_ID}
    </update>
    
    <!-- 删除 -->
    <delete id="delete" parameterType="pd" flushCache="false">
        delete from
        <include refid="tableName"></include>
        where
        WITHDRAW_ID = #{WITHDRAW_ID}
    </delete>
    
    <!-- 通过user_id获取数据 -->
    <select id="findById" parameterType="pd" resultType="pd">
        select
        	wd.WITHDRAW_ID,
			wd.MEMBER_ID,
			wd.MONEY,
			wd.CDT,
			wd.STATE,
			m.USERNAME,
			m.NICKNAME,
			m.FULLNAME,
			m.PHONE,
			m.SEX,
			m.PHOTO,
			m.WAITACCOUNT,
			m.ALREADYACCOUNT,
			m.WXOPEN_ID,
			m.FROMWXOPEN_ID,
			m.MEMBERTYPE_ID
        from
        <include refid="tableName"></include> wd
        left join member m on wd.member_id = m.member_id
        where
        wd.WITHDRAW_ID = #{WITHDRAW_ID}
    </select>
</mapper>