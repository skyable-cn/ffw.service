<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="LotteryrecordMapper">
    <!--表名 -->
    <sql id="tableName">
		lotteryrecord
	</sql>

    <!-- 字段 -->
    <sql id="Field">
    	LOTTERYRECORD_ID,
    	LOTTERY_ID,
		MEMBER_ID,
		LUCKNUMBER,
		CDT
	</sql>

    <!-- 字段值 -->
    <sql id="FieldValue">
		#{LOTTERYRECORD_ID},
		#{LOTTERY_ID},
		#{MEMBER_ID},
		#{LUCKNUMBER},
		#{CDT}
	</sql>

   <select id="listPage" parameterType="page" resultType="pd">
        select
	        lr.LOTTERYRECORD_ID,
	        lr.LOTTERY_ID,
			lr.MEMBER_ID,
			lr.LUCKNUMBER,
			lr.CDT,
			m.MEMBER_ID,
			m.NICKNAME,
			m.PHOTO
        from
        <include refid="tableName"></include> lr
        left join member m on lr.member_id = m.member_id
        where
        1 = 1
        <if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
            and
            (
            	LUCKNUMBER LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
            )
        </if>
        <if test="pd.LOTTERY_ID != null and pd.LOTTERY_ID != ''"><!-- 关键词检索 -->
            and lr.LOTTERY_ID = #{pd.LOTTERY_ID}
        </if>
        <if test="pd.MEMBER_ID != null and pd.MEMBER_ID != ''"><!-- 关键词检索 -->
            and m.MEMBER_ID = #{pd.MEMBER_ID}
        </if>
        order by LOTTERYRECORD_ID ASC
    </select>

    <select id="listAll" parameterType="pd" resultType="pd">
        select
	        lr.LOTTERYRECORD_ID,
	        lr.LOTTERY_ID,
			lr.MEMBER_ID,
			lr.LUCKNUMBER,
			lr.CDT,
			m.MEMBER_ID,
			m.NICKNAME,
			m.PHOTO
        from
        <include refid="tableName"></include> lr
        left join member m on lr.member_id = m.member_id
         where
        1 = 1
        <if test="keywords!= null and keywords != ''"><!-- 关键词检索 -->
            and
            (
            	LUCKNUMBER LIKE CONCAT(CONCAT('%', #{keywords}),'%')
            )
        </if>
        <if test="LOTTERY_ID != null and LOTTERY_ID != ''"><!-- 关键词检索 -->
            and lr.LOTTERY_ID = #{LOTTERY_ID}
        </if>
        <if test="MEMBER_ID != null and MEMBER_ID != ''"><!-- 关键词检索 -->
            and m.MEMBER_ID = #{MEMBER_ID}
        </if>
        order by LOTTERYRECORD_ID ASC
    </select>

    <!-- 新增 -->
    <insert id="save" parameterType="pd" useGeneratedKeys="true" keyProperty="LOTTERYRECORD_ID">
        insert into <include refid="tableName"></include> (
        <include refid="Field"></include>
        ) values (
        <include refid="FieldValue"></include>
        )
    </insert>
    
        <!-- 修改 -->
    <update id="edit" parameterType="pd">
        update
        <include refid="tableName"></include>
        set
        LOTTERYRECORD_ID = #{LOTTERYRECORD_ID}
        <if test="ROLENAME != null and ROLENAME != ''">
            ,ROLENAME = #{ROLENAME}
        </if>
        
        where
        LOTTERYRECORD_ID = #{LOTTERYRECORD_ID}
    </update>
    
    <!-- 删除 -->
    <delete id="delete" parameterType="pd" flushCache="false">
        delete from
        <include refid="tableName"></include>
        where
        LOTTERYRECORD_ID = #{LOTTERYRECORD_ID}
    </delete>
    
    <!-- 通过user_id获取数据 -->
    <select id="findById" parameterType="pd" resultType="pd">
        select
	        lr.LOTTERYRECORD_ID,
	        lr.LOTTERY_ID,
			lr.MEMBER_ID,
			lr.LUCKNUMBER,
			lr.CDT,
			m.MEMBER_ID,
			m.NICKNAME,
			m.PHOTO
        from
        <include refid="tableName"></include> lr
        left join member m on lr.member_id = m.member_id
        where
        	lr.LOTTERYRECORD_ID = #{LOTTERYRECORD_ID}
    </select>
    
    <select id="findBy" parameterType="pd" resultType="pd">
        select
	        lr.LOTTERYRECORD_ID,
	        lr.LOTTERY_ID,
			lr.MEMBER_ID,
			lr.LUCKNUMBER,
			lr.CDT,
			m.MEMBER_ID,
			m.NICKNAME,
			m.PHOTO
        from
        <include refid="tableName"></include> lr
        left join member m on lr.member_id = m.member_id
        where
        	1 = 1
        <if test="LOTTERY_ID != null and LOTTERY_ID != ''"><!-- 关键词检索 -->
            and lr.LOTTERY_ID = #{LOTTERY_ID}
        </if>
        <if test="MEMBER_ID != null and MEMBER_ID != ''"><!-- 关键词检索 -->
            and m.MEMBER_ID = #{MEMBER_ID}
        </if>
        limit 0,1
    </select>
</mapper>