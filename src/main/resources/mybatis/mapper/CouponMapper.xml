<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="CouponMapper">
    <!--表名 -->
    <sql id="tableName">
		coupon
	</sql>

    <!-- 字段 -->
    <sql id="Field">
		COUPON_ID,
		MONEY,
		STARTTIME,
		ENDTIME,
		STATE
	</sql>

    <!-- 字段值 -->
    <sql id="FieldValue">
		#{COUPON_ID},
		#{MONEY},
		#{STARTTIME},
		#{ENDTIME},
		#{STATE}
	</sql>

   <select id="listPage" parameterType="page" resultType="pd">
        select
        <include refid="Field"></include>
        from
        <include refid="tableName"></include>
        where
        1 = 1
        <if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
            and
            (
            	MONEY LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
            )
        </if>
        <if test="pd.STARTTIME != null and pd.STARTTIME != ''">
			and starttime <![CDATA[ <= ]]> str_to_date(#{pd.STARTTIME}, '%Y-%m-%d')
		</if>
		<if test="pd.ENDTIME != null and pd.ENDTIME != ''">
			and endtime <![CDATA[ >= ]]> str_to_date(#{pd.ENDTIME}, '%Y-%m-%d')
		</if>
		<if test="pd.STATE != null and pd.STATE != ''">
			and state = #{pd.STATE}
		</if>
        order by COUPON_ID ASC
    </select>

    <select id="listAll" parameterType="pd" resultType="pd">
        select
        <include refid="Field"></include>
        from
        <include refid="tableName"></include>
         where
        1 = 1
        <if test="keywords!= null and keywords != ''"><!-- 关键词检索 -->
            and
            (
            	MONEY LIKE CONCAT(CONCAT('%', #{keywords}),'%')
            )
        </if>
        <if test="STARTTIME != null and STARTTIME != ''">
			and starttime <![CDATA[ <= ]]> str_to_date(#{STARTTIME}, '%Y-%m-%d')
		</if>
		<if test="ENDTIME != null and ENDTIME != ''">
			and endtime <![CDATA[ >= ]]> str_to_date(#{ENDTIME}, '%Y-%m-%d')
		</if>
		<if test="STATE != null and STATE != ''">
			and state = #{STATE}
		</if>
        order by COUPON_ID ASC
    </select>

    <!-- 新增 -->
    <insert id="save" parameterType="pd" useGeneratedKeys="true" keyProperty="COUPON_ID">
        insert into <include refid="tableName"></include> (
        <include refid="Field"></include>
        ) values (
        <include refid="FieldValue"></include>
        )
    </insert>
    
        <!-- 修改 -->
    <update id="edit" parameterType="pd">
        update
        <include refid="tableName"></include>
        set
        COUPON_ID = #{COUPON_ID}
        <if test="MONEY != null and MONEY != ''">
            ,MONEY = #{MONEY}
        </if>
        <if test="STARTTIME != null and STARTTIME != ''">
            ,STARTTIME = #{STARTTIME}
        </if>
        <if test="ENDTIME != null and ENDTIME != ''">
            ,ENDTIME = #{ENDTIME}
        </if>
        <if test="STATE != null and STATE != ''">
            ,STATE = #{STATE}
        </if>
        where
        COUPON_ID = #{COUPON_ID}
    </update>
    
    <!-- 删除 -->
    <delete id="delete" parameterType="pd" flushCache="false">
        delete from
        <include refid="tableName"></include>
        where
        COUPON_ID = #{COUPON_ID}
    </delete>
    
    <!-- 通过user_id获取数据 -->
    <select id="findById" parameterType="pd" resultType="pd">
        select
        <include refid="Field"></include>
        from
        <include refid="tableName"></include>
        where
        COUPON_ID = #{COUPON_ID}
    </select>
</mapper>