			            SQRT(
			                POW(
			                    SIN(
			                        (
			                        <if test="LATITUDE == null or LATITUDE == ''">
			                            latitude
			                        </if>
			                        <if test="LATITUDE != null and LATITUDE != ''">
			                            #{LATITUDE}
			                        </if>
